@inject IOperationService OperationService
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Assembly Line</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/devices" Match="NavLinkMatch.All">
                <span class="oi oi-monitor" aria-hidden="true"></span> Devices
            </NavLink>
        </div>
        @if(device != null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="operation/0" >
                    <span class="oi oi-wrench" aria-hidden="true"></span> Operations
                </NavLink>
            </div>
        }
        else{
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="operation/0" hidden>
                    <span class="oi oi-wrench" aria-hidden="true"></span> Operations
                </NavLink>
            </div>
        }
       
        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    
    Device device = new Device();

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
